
@model MvcCountry.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form id="TestForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                @Html.DropDownList("Name")
            </div>
            @Html.Raw(TempData["saveCountry"])

            @{
                var countryParametrs = (List<MvcCountry.Models.Country>)ViewData["MyData"];
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Alpha2Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.capital)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Area)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Population)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Region)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in @countryParametrs)
                    {
                        <tr>
                            <td>
                                @Html.Label(c.Name)
                            </td>
                            <td>
                                @Html.Label(c.Alpha2Code)
                            </td>
                            <td>
                                @Html.Label(c.capital)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => c.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => c.Population)
                            </td>
                            <td>
                                @Html.Label(c.Region)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>
@Html.Raw(TempData["msg"])
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
